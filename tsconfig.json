{
  "compilerOptions": {
    "sourceMap": true,
    "target": "ES6",
    "module": "commonjs",
    "outDir": "./dist",
    "baseUrl": "./server",
    "alwaysStrict": true,
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
  }
}